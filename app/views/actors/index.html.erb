<div class="container">
  <div class="row">
    <h1>Lista de Actores</h1>

    <div class="row">
    <div class="col-md-12">
      <table class="table table-striped">
        <thead>
          <th>Foto</th>
          <th>Nombre</th>
          <th>Bio</th>
          <th>Fecha de Nacimiento</th>
          <th>Lugar de Nacimiento</th>
        </thead>

        <tbody>
          <% @actors.each do |actor| %>
            <tr>

              <td><img src="<%=actor.image_url%>" alt="image_actor"> </td>
              <td><%= actor.name%></td>
              <td><%= actor.bio %></td>
              <td><%= actor.birth_date%></td>
              <td><%= actor.birth_place%></td>
              <td>
              <% unless actor.alive? %>
              <%= actor.death_date%>
              <%= actor.death_place%>

              <%end%>
            </td>
              </tr>
          <% end %>
        </tbody>

      </table>
    </div>
  </div>
</div>
